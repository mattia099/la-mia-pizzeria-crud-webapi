@model PizzaCategory

<div class="container">
    <h2>Modifica dati della pizza @Model.Pizza.Name</h2>
    <form asp-controller="Pizza" asp-action="Edit" asp-route-id="@Model.Pizza.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">  
            <strong>Name:</strong>
            <input asp-for="Pizza.Name" class="d-block w-100" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Description:</strong>
            <textarea asp-for="Pizza.Description" class="d-block w-100"></textarea>
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Image:</strong>
            <input asp-for="Pizza.Image" class="d-block w-100"/>
            <span asp-validation-for="Pizza.Image" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Price:</strong>
            <input asp-for="Pizza.Price" class="d-block w-100"/>
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizza.CategoryID" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach(Category category in Model.Categories)
                {
                    if(Model != null && Model.Pizza.CategoryID == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Pizza.CategoryID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong class="d-block">Ingredienti:</strong>
            <select asp-for="SelectedIngredients" multiple="multiple" size="10" class="form-controll mb-2 mr-sm-2 ml-sm-3 leftList" asp-items="@Model.Ingredients">
            </select>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>